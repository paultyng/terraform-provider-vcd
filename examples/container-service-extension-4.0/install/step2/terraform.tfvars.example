# Change configuration to your needs and rename to 'terraform.tfvars'

# ------------------------------------------------
# Provider config
# ------------------------------------------------
vcd_url                = "https://vcd.my-awesome-corp.com"
administrator_user     = "administrator"
administrator_password = "change-me"
administrator_org      = "System"
insecure_login         = "false"

# ------------------------------------------------
# NSX-T VDC setup
# ------------------------------------------------
provider_vdc_name      = "change-me"
nsxt_edge_cluster_name = "change-me"
network_pool_name      = "change-me"

# ------------------------------------------------
# Catalog and OVAs
# ------------------------------------------------
tkgm_ova_folder = "/home/changeme/tkgm-folder"
tkgm_ova_file   = "ubuntu-2004-kube-v1.22.9+vmware.1-tkg.1-2182cbabee08edf480ee9bc5866d6933.ova"
cse_ova_folder  = "/home/changeme/cse-folder"
cse_ova_file    = "VMware_Cloud_Director_Container_Service_Extension-4.0.1.ova"

# ------------------------------------------------
# Values to create a basic networking setup
# ------------------------------------------------
nsxt_manager_name      = "change-me"

solutions_nsxt_tier0_router_name                 = "change-me"
solutions_provider_gateway_gateway_ip            = "10.20.30.250"
solutions_provider_gateway_gateway_prefix_length = "19"
solutions_provider_gateway_static_ip_ranges = [
  ["10.20.30.16", "10.20.30.16"], # Single IP
  ["10.20.30.20", "10.20.30.25"], # Many IPs
]

cluster_nsxt_tier0_router_name                 = "change-me"
cluster_provider_gateway_gateway_ip            = "10.30.20.150"
cluster_provider_gateway_gateway_prefix_length = "19"
cluster_provider_gateway_static_ip_ranges = [
  ["10.30.20.14", "10.30.20.14"], # Single IP
  ["10.30.20.30", "10.30.20.37"], # Many IPs
]

solutions_routed_network_gateway_ip            = "192.168.0.1"
solutions_routed_network_prefix_length         = "24"
solutions_routed_network_ip_pool_start_address = "192.168.0.2"
solutions_routed_network_ip_pool_end_address   = "192.168.0.254"
solutions_snat_external_ip                     = "10.20.30.25" # We pick the last IP from solutions_provider_gateway_static_ip_ranges
solutions_snat_internal_subnet                 = "192.168.0.0/24"
solutions_routed_network_dns                   = ""

cluster_routed_network_gateway_ip            = "10.0.0.1"
cluster_routed_network_prefix_length         = "16"
cluster_routed_network_ip_pool_start_address = "10.0.0.2"
cluster_routed_network_ip_pool_end_address   = "10.0.255.254"
cluster_snat_external_ip                     = "10.30.20.37" # We pick the last IP from cluster_provider_gateway_static_ip_ranges
cluster_snat_internal_subnet                 = "10.0.0.0/16"
cluster_routed_network_dns                   = ""


# ------------------------------------------------
# Values to create ALB setup
# ------------------------------------------------
alb_controller_username   = "admin"
alb_controller_password   = "change-me"
alb_controller_url        = "https://alb-ctrl.my-awesome-corp.com"
alb_importable_cloud_name = "change-me"

# ------------------------------------------------
# CSE Server configuration
# ------------------------------------------------
vcdkeconfig_template_filepath = "../../entities/vcdkeconfig-template.json"
capvcd_version                = "1.1.0"
cpi_version                   = "1.2.0"
csi_version                   = "1.3.0"

# Create this one in https://github.com/settings/tokens
github_personal_access_token = "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# This user was created in Step 1. You need to provide a valid API token for it
cse_admin_user      = "cse-admin"
cse_admin_api_token = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"